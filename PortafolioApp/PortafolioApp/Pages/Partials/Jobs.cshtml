@model List<PortafolioApp.Models.Job>


<section class="flex flex-col items-center justify-center mt-16 px-4 transition-colors duration-300">
    <h2 class="text-3xl font-bold text-center mb-8 text-gray-800 dark:text-white transition-colors duration-300">
        Experience
    </h2>

    <div class="w-full max-w-4xl space-y-6">
        @foreach (var job in Model.OrderByDescending(j => j.StartDate))
        {
            <div class="bg-white dark:bg-gray-900 border border-gray-200 dark:border-gray-700 rounded-xl shadow-sm dark:shadow-md hover:shadow-md dark:hover:shadow-lg transition-all p-6 text-gray-800 dark:text-gray-200">
                <div class="flex flex-col md:flex-row md:justify-between md:items-center mb-2">
                    <h3 class="text-xl font-semibold text-gray-800 dark:text-white">@job.Title</h3>
                    <span class="text-sm text-gray-500 dark:text-gray-400">@job.Location</span>
                </div>
                <p class="text-sm text-gray-600 dark:text-gray-300 mb-2"><strong>@job.Company</strong></p>
                <p class="text-sm text-gray-500 dark:text-gray-400 italic">
                    @job.StartDate.ToString("MMMM yyyy") â€“
                    @(job.EndDate.HasValue ? job.EndDate.Value.ToString("MMMM yyyy") : "Present")
                </p>
                <p class="text-sm text-gray-700 dark:text-gray-300 mt-2">
                    @job.Description
                </p>
            </div>
        }
    </div>
</section>