@page
@model JobsModel
@{
    ViewData["Title"] = "Manage Jobs";
}

<h2 class="text-xl font-bold mb-4">Jobs</h2>

<form method="post" class="space-y-2 mb-4">
    <input asp-for="NewJob.Company" placeholder="Company" class="border p-2 w-full rounded" />
    <input asp-for="NewJob.Title" placeholder="Job Title" class="border p-2 w-full rounded" />
    <input asp-for="NewJob.Location" placeholder="Location" class="border p-2 w-full rounded" />
    <input asp-for="NewJob.Description" placeholder="Description" class="border p-2 w-full rounded" />
    <input asp-for="NewJob.StartDate" placeholder="Description" class="border p-2 w-full rounded" />
    <input asp-for="NewJob.EndDate" placeholder="Description" class="border p-2 w-full rounded" />
    <button type="submit" class="bg-blue-600 text-white px-4 py-2 rounded">Add</button>
</form>

<ul class="space-y-2">
    @foreach (var job in Model.Jobs)
    {
        <li class="border p-2 rounded">
            <div class="font-bold">@job.Title</div>
            <div class="text-sm text-gray-600">@job.Company - @job.Location</div>
            <p class="text-gray-800 mt-1">@job.Description</p>
            <form method="post" asp-page-handler="Delete" asp-route-id="@job.Id" class="mt-2">
                <button class="text-red-500 hover:underline">Delete</button>
            </form>
        </li>
    }
</ul>