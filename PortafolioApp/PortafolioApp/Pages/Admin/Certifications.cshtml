@page
@model CertificationsModel
@{
    ViewData["Title"] = "Manage Certifications";
}

<h2 class="text-xl font-bold mb-4">Certifications</h2>

<form method="post" class="space-y-2 mb-4">
    <input asp-for="NewCertification.Title" placeholder="Title" class="border p-2 w-full rounded" />
    <input asp-for="NewCertification.Issuer" placeholder="Organization" class="border p-2 w-full rounded" />
    <input asp-for="NewCertification.CertificateUrl" placeholder="Certificate URL" class="border p-2 w-full rounded" />
    <input asp-for="NewCertification.DateObtained" placeholder="Date Obtained" class="border p-2 w-full rounded" />
    <button type="submit" class="bg-blue-600 text-white px-4 py-2 rounded">Add</button>
</form>

<ul class="space-y-2">
    @foreach (var cert in Model.Certifications.OrderByDescending(c => c.DateObtained))
    {
        <li class="flex justify-between items-center border p-2 rounded">
            <div>
                <div class="font-semibold">@cert.Title</div>
                <div class="text-sm text-gray-500">@cert.Issuer</div>
                <a href="@cert.CertificateUrl" class="text-blue-600 hover:underline" target="_blank">View Certificate</a>
            </div>
            <form method="post" asp-page-handler="Delete" asp-route-id="@cert.Id">
                <button class="text-red-500 hover:underline">Delete</button>
            </form>
        </li>
    }
</ul>