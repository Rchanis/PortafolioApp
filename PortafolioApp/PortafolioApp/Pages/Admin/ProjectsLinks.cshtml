@page
@model ProjectLinksModel
@{
    ViewData["Title"] = "Manage Project Links";
}

<h2 class="text-xl font-bold mb-4">Project Links</h2>

<form method="post" class="flex gap-2 mb-4">
    <input asp-for="NewProjectLink.Title" placeholder="Title" class="border p-2 rounded" />
    <input asp-for="NewProjectLink.Url" placeholder="URL" class="border p-2 rounded" />
    <button type="submit" class="bg-blue-600 text-white px-4 py-2 rounded">Add</button>
</form>

<ul class="space-y-2">
    @foreach (var link in Model.ProjectLinks)
    {
        <li class="flex justify-between items-center border p-2 rounded">
            <div>
                <a href="@link.Url" target="_blank" class="text-blue-600 hover:underline">@link.Title</a>
            </div>
            <form method="post" asp-page-handler="Delete" asp-route-id="@link.Id">
                <button class="text-red-500 hover:underline">Delete</button>
            </form>
        </li>
    }
</ul>