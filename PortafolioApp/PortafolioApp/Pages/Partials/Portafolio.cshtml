@model List<PortafolioApp.Models.ProjectLink>

<h2 class="text-3xl font-bold text-center mt-10 mb-6">Portafolio</h2>

<div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-6 px-4 md:px-10">
    @foreach (var p in Model)
    {
        <a href="@p.Url" target="_blank" class="block bg-white shadow-md hover:shadow-xl transition rounded-lg p-6 text-center border hover:border-blue-400">
            <span class="text-xl font-semibold text-gray-800">@p.Title</span>
        </a>
    }
</div>