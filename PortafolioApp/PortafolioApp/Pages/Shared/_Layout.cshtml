<!DOCTYPE html>
<html lang="en" class="dark">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    
    <!-- icons   -->
    <link rel="apple-touch-icon" sizes="180x180" href="~/assets/icons/apple-touch-icon.png">
    <link rel="icon" type="image/png" sizes="32x32" href="~/assets/icons/favicon-32x32.png">
    <link rel="icon" type="image/png" sizes="16x16" href="~/assets/icons/favicon-16x16.png">
    <link rel="manifest" href="~/assets/icons/site.webmanifest">
    <link rel="icon" type="image/x-icon" href="~/assets/icons/favicon.ico" />
    
    
    <link href="https://cdn.quilljs.com/1.3.6/quill.snow.css" rel="stylesheet">
    <title>@ViewData["Title"] - PortfolioApp</title>

    <script src="https://cdn.tailwindcss.com"></script>

    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true"/>
    <link rel="stylesheet" href="~/PortafolioApp.styles.css" asp-append-version="true"/>
</head>
<body class="min-h-screen bg-gradient-to-r from-blue-100 via-purple-100 to-pink-100 dark:from-gray-900 dark:via-gray-800 dark:to-gray-900 text-gray-800 dark:text-gray-200 transition-colors duration-500">

@await Html.PartialAsync("Partials/_Header")


<main>
    @RenderBody()
</main>

<footer class="border-t border-gray-200 dark:border-gray-700 text-gray-500 dark:text-gray-400 text-sm py-6 mt-16 transition-colors duration-300">
    <div class="max-w-7xl mx-auto px-4 flex flex-col sm:flex-row justify-between items-center">
        <span>&copy; 2025 - RFC Portafolio</span>
    </div>
</footer>

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>

@await RenderSectionAsync("Scripts", required: false)
</body>
</html>